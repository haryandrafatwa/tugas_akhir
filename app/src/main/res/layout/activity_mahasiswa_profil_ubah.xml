<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="presenter"
            type="org.d3ifcool.finpro.core.presenters.MahasiswaPresenter" />
    </data>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                style="@style/profile_all_header"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/act_mhs_profil_foto"
                style="@style/profile_all_photo"/>

            <LinearLayout
                android:id="@+id/linear_layout"
                style="@style/profile_all_container_body">

                <LinearLayout
                    style="@style/profile_all_container_textview">

                    <TextView
                        android:text="@string/text_profil_detail_nim"
                        style="@style/profile_all_textview_subtitle"/>

                    <TextView
                        android:id="@+id/act_mhs_profil_nim"
                        tools:text="@string/dummy_anggota_nim_2"
                        android:text="@={presenter.nim}"
                        style="@style/profile_all_textview_content"/>


                </LinearLayout>

                <View
                    android:layout_marginBottom="@dimen/dimen_big_super_24dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorBackground"/>

                <LinearLayout
                    style="@style/profile_all_container_textview">

                    <TextView
                        android:text="@string/text_angkatan"
                        style="@style/profile_all_textview_subtitle"/>

                    <TextView
                        android:id="@+id/act_mhs_profil_angkatan"
                        android:background="@android:color/transparent"
                        tools:hint="@string/dummy_angkatan"
                        android:text="@={presenter.angkatan}"
                        style="@style/profile_all_textview_content"/>

                </LinearLayout>

                <View
                    android:layout_marginBottom="@dimen/dimen_big_super_24dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorBackground"/>

                <LinearLayout
                    style="@style/profile_all_container_textview">

                    <TextView
                        android:text="@string/text_nama"
                        style="@style/profile_all_textview_subtitle"/>

                    <EditText
                        android:id="@+id/act_mhs_profil_nama"
                        android:background="@android:color/transparent"
                        tools:hint="@string/dummy_mahasiswa_nama"
                        android:text="@={presenter.nama}"
                        style="@style/profile_all_textview_content"/>

                </LinearLayout>

                <View
                    android:layout_marginBottom="@dimen/dimen_big_super_24dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorBackground"/>




                <LinearLayout
                    style="@style/profile_all_container_textview">

                    <TextView
                        android:text="@string/text_profil_detail_email"
                        style="@style/profile_all_textview_subtitle"/>

                    <EditText
                        android:id="@+id/act_mhs_profil_email"
                        android:text="@={presenter.email}"
                        android:background="@android:color/transparent"
                        style="@style/profile_all_textview_content"/>

                </LinearLayout>

                <View
                    android:layout_marginBottom="@dimen/dimen_big_super_24dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorBackground"/>

                <LinearLayout
                    style="@style/profile_all_container_textview">

                    <TextView
                        android:text="@string/text_profil_detail_notelp"
                        style="@style/profile_all_textview_subtitle"/>

                    <EditText
                        android:id="@+id/act_mhs_profil_kontak"
                        android:background="@android:color/transparent"
                        tools:hint="@string/dummy_no_telp"
                        android:text="@={presenter.telp}"
                        android:inputType="number"
                        style="@style/profile_all_textview_content"/>

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorBackground"/>

            </LinearLayout>

            <include
                layout="@layout/content_all_copyright_institute"/>

        </RelativeLayout>


    </ScrollView>
</layout>