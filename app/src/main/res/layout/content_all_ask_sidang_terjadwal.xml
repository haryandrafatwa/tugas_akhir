<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout
        android:id="@+id/container_ask_all_sidang"
        android:visibility="gone"
        android:padding="@dimen/dimen_big_16dp"
        android:orientation="horizontal"
        android:background="@color/cardview_light_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Konfirmasi terkait jadwal sidang ke seluruh mahasiswa"
            android:layout_toStartOf="@id/btn_accept_all_bimbingan"
            android:layout_marginEnd="@dimen/dimen_medium_8dp"/>

        <Button
            android:paddingStart="@dimen/dimen_big_16dp"
            android:paddingEnd="@dimen/dimen_big_16dp"
            android:id="@+id/btn_accept_all_bimbingan"
            android:layout_alignParentEnd="true"
            android:background="@drawable/box_border_button_acc"
            android:clickable="true"
            android:textColor="@color/colorTextWhite"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanyakan"
            android:focusable="true" />

    </RelativeLayout>
</layout>
